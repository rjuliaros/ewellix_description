<?xml version="1.0"?>
<robot name="ewellix_lift_500mm" xmlns:xacro="http://www.ros.org/wiki/xacro">


<xacro:property name="M_PI" value="3.1415926535897931" />


<!-- - - - - - - - - - - - - - EWELLIX LIFT - - - - - - - - - - - - - -->

  <xacro:macro name="ewellix_lift_500mm" params="prefix parent cut_model:=false *origin">

    <!-- Lift base link joint -->
    <joint name="${prefix}ewellix_lift_base_joint" type="fixed">
      <xacro:insert_block name="origin" />
      <parent link="${parent}"/>
      <child link="${prefix}ewellix_lift_base_link" /> 
    </joint>

    <!-- Lift base link -->
    <link name="${prefix}ewellix_lift_base_link">

      <visual>
        <origin xyz="0 0 0.275" rpy="1.57 0 0"/>
        <geometry>
          <mesh filename="package://ewellix_description/meshes/ewellix_lift_base_500mm.stl" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="grey">
          <color rgba="0.7 0.7 0.7 1"/>
        </material>
      </visual>

      <collision>
        <origin xyz="0 0 0.28" rpy="1.57 0 0"/>
        <geometry>
          <mesh filename="package://ewellix_description/meshes/ewellix_lift_base_500mm.stl" scale="0.001 0.001 0.001"/>
        </geometry>
      </collision>

      <inertial>
        <mass value="20" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <inertia ixx="1e-1" ixy="0" ixz="0" iyy="1e-1" iyz="0" izz="1e-1" />
      </inertial>
    </link>

    <!-- Lift top link joint -->
    <joint name="${prefix}ewellix_lift_1_joint" type="prismatic">
      <parent link="${prefix}ewellix_lift_base_link"/>
      <child link="${prefix}ewellix_lift_1_link" />
      <origin xyz="0 0 0.042" rpy="0 0 0" />
      <limit effort="1000" lower="0.0" upper="0.275" velocity="0.088"/>
      <axis xyz="0 0 1" /> 
    </joint>


    <!-- Lift 1 link -->
    <link name="${prefix}ewellix_lift_1_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <xacro:if value="${cut_model}">
            <mesh filename="package://ewellix_description/meshes/ewellix_lift_joint_1_500mm.stl"/>
          </xacro:if>
          <xacro:unless value="${cut_model}">
            <mesh filename="package://ewellix_description/meshes/ewellix_lift_joint_1_500mm.stl"/>
          </xacro:unless>
        </geometry>
        <material name="grey">
          <color rgba="0.7 0.7 0.7 1"/>
        </material>
      </visual>

      <collision>
        <origin xyz="-0.005 0 0.00235" rpy="0 0 0"/>
        <geometry>
          <xacro:if value="${cut_model}">
            <mesh filename="package://ewellix_description/meshes/ewellix_lift_joint_1_500mm.stl"/>
          </xacro:if>
          <xacro:unless value="${cut_model}">
            <mesh filename="package://ewellix_description/meshes/ewellix_lift_joint_1_500mm.stl"/>
          </xacro:unless>
        </geometry>
      </collision>

      <inertial>
        <mass value="2" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
         <inertia ixx="0.2e-1" ixy="0" ixz="0" iyy="0.2e-1" iyz="0" izz="0.2e-1" />
      </inertial>
    </link>

    <!-- Lift top link joint -->
    <joint name="${prefix}ewellix_lift_2_joint" type="prismatic">
      <parent link="${prefix}ewellix_lift_1_link"/>
      <child link="${prefix}ewellix_lift_2_link" />
      <origin xyz="0 0 0.005" rpy="0 0 0" />
      <limit effort="1000" lower="0.0" upper="0.225" velocity="0.088"/>
      <axis xyz="0 0 1" /> 
    </joint>


    <!-- Lift top link -->
    <link name="${prefix}ewellix_lift_2_link">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <xacro:if value="${cut_model}">
            <mesh filename="package://ewellix_description/meshes/ewellix_lift_joint_2_500mm.stl"/>
          </xacro:if>
          <xacro:unless value="${cut_model}">
            <mesh filename="package://ewellix_description/meshes/ewellix_lift_joint_2_500mm.stl"/>
          </xacro:unless>
        </geometry>
        <material name="grey">
          <color rgba="0.7 0.7 0.7 1"/>
        </material>
      </visual>

      <collision>
        <origin xyz="-0.005 0 0.00235" rpy="0 0 0"/>
        <geometry>
          <xacro:if value="${cut_model}">
            <mesh filename="package://ewellix_description/meshes/ewellix_lift_joint_2_500mm.stl"/>
          </xacro:if>
          <xacro:unless value="${cut_model}">
            <mesh filename="package://ewellix_description/meshes/ewellix_lift_joint_2_500mm.stl"/>
          </xacro:unless>
        </geometry>
      </collision>

      <inertial>
        <mass value="2" />
        <origin xyz="0 0 0" rpy="0 0 0"/>
         <inertia ixx="0.2e-1" ixy="0" ixz="0" iyy="0.2e-1" iyz="0" izz="0.2e-1" />
      </inertial>
    </link>

    <!--
        PositionJointInterface
        VelocityJointInterface
        EffortJointInterface
    -->

    <transmission name="${prefix}ewellix_lift_joint_1_trans"  type="SimpleTransmission">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="${prefix}ewellix_lift_1_joint_motor">
          <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="${prefix}ewellix_lift_1_joint">
          <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
    </transmission>

    <transmission name="${prefix}ewellix_lift_joint_2_trans"  type="SimpleTransmission">
      <type>transmission_interface/SimpleTransmission</type>
      <actuator name="${prefix}ewellix_lift_2_joint_motor">
          <mechanicalReduction>1</mechanicalReduction>
      </actuator>
      <joint name="${prefix}ewellix_lift_2_joint">
          <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
    </transmission>


    <gazebo reference="${prefix}ewellix_lift_base_link">
      <material>Gazebo/Grey</material>
    </gazebo>
    <gazebo reference="${prefix}ewellix_lift_1_link">
      <material>Gazebo/Grey</material>
    </gazebo>
    <gazebo reference="${prefix}ewellix_lift_2_link">
      <material>Gazebo/Grey</material>
    </gazebo>

  </xacro:macro>

  
</robot>